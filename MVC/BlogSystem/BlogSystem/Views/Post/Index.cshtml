@model IEnumerable<BlogSystem.Models.PostViewModel>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Content</td>
            <td>DateCreated</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Name</td>
                <td>@post.Content</td>
                <td>@post.DateCreated</td>
                <td>
                    @if (@post.UserName != null)
                {
                    @post.UserName
                }
                else
                {
                    <span>--</span>
                }
            </td>
        </tr>
        }
    </tbody>
</table>